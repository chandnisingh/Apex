#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<archetype xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype/1.0.0 http://maven.apache.org/xsd/archetype-1.0.0.xsd">
  <id>${artifactId}</id>
  <sources>
    <source>src/main/java/${packageInPathFormat}/Application.java</source>
  </sources>
  <resources>
    <resource>src/main/resources/META-INF/*</resource>
  </resources>
  <testSources>
    <source>src/test/java/${packageInPathFormat}/ApplicationTest.java</source>
  </testSources>
  <testResources>
    <resource>src/test/resources/log4j.properties</resource>
  </testResources>
  <siteResources>
    <resource>src/site/conf/*.xml</resource>
  </siteResources>
</archetype>
